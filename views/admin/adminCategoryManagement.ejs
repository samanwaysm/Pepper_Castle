        <!-- <div class="container " style="background-color: rgb(233, 230, 221);"> -->
            <!-- <div class="container"></div>
            <div class="container-head p-2">
                <button class="p-2 bg-black" style="border-radius: 10px;"><a class="text-white" href="/adminAddCategory" >Add Category</a></button>
                <button class="p-2 bg-black" style="border-radius: 10px;"><a class="text-white" href="/adminUnlistCategory">Unlisted Category</a></button>
            </div> -->
            <div class="container-head d-flex justify-content-between m-2 p-2 ">
				<Button class="p-2 bg-black" style="border-radius: 10px;"><a style="color: #fff;" href="/adminAddCategory">Add Category</a></Button>
				<Button class="p-2 bg-black" style="border-radius: 10px;"><a style="color: #fff;" href="/adminUnlistCategory">Unlist Category</a></Button>
                </div>
            <% for( let i=0;i<category.length;i++) {%>
                <div class="container-body bg-white d-flex justify-content-between m-2 text-dark" style="border-radius: 20px;">
                        <div class="Item d-flex">
                        <div class="Item-body m-5">
                            <h5>Category : <%= category[i].category %></h5>  
                        </div>
                        </div>
                        <div class="Item-dtails p-3 d-flex">
                            <div class="text-center">
                                <!-- <p>MRP:12000</p>
                                <p>Discount:5%</p>
                                <p>10800</p>  -->
                            </div>
                            <div class="buttons m-3 text-center d-flex">
                            <a href="/adminEditCategory?id=<%= category[i]._id%>"><i class="bi bi-pencil-square"style="font-size: 30px;"></i></a> 
                            <!-- <form action="/adminEditCategory?id=" method="get">
                                <button style="border: none;background-color: #fff;"><i class="bi bi-pencil-square" style="font-size: 35px;"></i></button>
                            </form> -->


                            <!-- <form action="/admin/unlistcategory?id=<%= category[i]._id%>" method="post">
                                    <button style="border: none;background-color: #fff;"><i class="bi bi-trash-fill" style="font-size: 30px; color:red;"></i></button>
                            </form> -->

                            <form class="deleteForm" action="/admin/unlistcategory" method="post">
                                <button type="button" style="border: none; background-color: #fff;" data-toggle="modal" data-target="#deleteModal<%= category[i]._id %>">
                                    <i class="bi bi-trash-fill" style="font-size: 30px; color:red;"></i>
                                </button>
                                <input type="hidden" name="categoryId" value="<%= category[i]._id %>">
                            </form>
                            
                            </div>
                            <!-- Modal -->
                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal<%= category[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel">Confirm Unlist</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure Unlist this category?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-danger" onclick="submitDeleteForm('<%= category[i]._id %>')">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            

                        </div>
                        
                    </div>   
            <% } %> 
        </div>

        

    </section>
    <!-- CONTENT -->

    <script>
        function submitDeleteForm(categoryId) {
            var form = document.querySelector('.deleteForm');
            form.action = '/admin/unlistcategory?id=' + categoryId;
            form.submit();
        }
    </script>

