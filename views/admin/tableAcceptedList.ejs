            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                $(document).ready(function() {
                    // Function to fetch bookings and render them
                    function fetchBookings() {
                        $.ajax({
                            type: 'GET',
                            url: '/api/table-booking-data',
                            data:{status:'accepted'},
                            success: function(response) {
                                const bookings = response;
                                
                                let cardHtml = '';
            
                                // Loop through each booking and create a card
                                bookings.forEach(function(booking) {
                                    cardHtml += `
                                        <div class="col-md-4">
                                            <div class="card">
                                                <div class="card-body">
                                                    <p><strong>Name: </strong>${booking.name}</p>
                                                    <p><strong>Email: </strong>${booking.email}</p>
                                                    <p><strong>Phone: </strong>${booking.phone}</p>
                                                    <p><strong>Message: </strong>${booking.message}</p>
                                                </div>
                                                <div class="card-footer">
                                                    <button class="btn btn-success mb-2 accept-btn" data-id="${booking._id}">Completed</button>
                                                </div>
                                            </div>
                                        </div>`;
                                });
            
                                // Insert the generated cards into the container
                                $('#booking-cards-container').html(cardHtml);
                            },
                            error: function() {
                                $('#booking-cards-container').html('<p>No data Available.</p>');
                            }
                        });
                    }
            
                    // Call the function to fetch and display bookings
                    fetchBookings();
            
                    // Event listeners for the Accept and Complete buttons
                    $(document).on('click', '.accept-btn', function() {
                        const bookingId = $(this).data('id');
                        $.ajax({
                            type: 'POST',
                            url: `/api/updateStatus?id=${bookingId}`,
                            data:{status:'completed'},
                            success: function(response) {
                                // alert('Booking accepted successfully: ' + response.message);
                                $(`[data-id="${bookingId}"]`).closest('.col-md-4').remove();
                            },
                            error: function(xhr) {
                                alert(xhr.responseJSON.message || 'Error accepting the booking');
                            }
                        });
                    });
                });
            </script>

