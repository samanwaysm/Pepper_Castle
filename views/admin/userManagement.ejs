            <div class="content">
                <div class="breadcrumb">
                    <a href="/userManagement" class="breadcrumb-link">User Management</a>
                </div>

                <!-- Action Buttons -->
                <!-- <div class="action-buttons">
                    <a href="/addUser"><button class="btn btn-primary">Add User</button></a>
                    <a href="/deactivateUser"><button class="btn btn-primary">Deactivate User</button></a>
                </div> -->

                <table class="table user-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>1</td>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.phone %>
                                </td>
                                <td class="action-buttons">
                                    <% if(user.isBlocked===false){ %>
                                        <button class="btn btn-danger btn-sm mng-btn action-btn"
                                            data-id="<%= user._id %>" data-action="block">Block</button>
                                        <% } else { %>
                                            <button class="btn btn-success btn-sm mng-btn action-btn"
                                                data-id="<%= user._id %>" data-action="unblock">Unblock</button>
                                            <% } %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <script src="/admin/js/core/jquery.min.js"></script>
            <script src="/admin/js/core/popper.min.js"></script>
            <script src="/admin/js/core/bootstrap.min.js"></script>
            <script src="/admin/js/plugins/perfect-scrollbar.jquery.min.js"></script>
            <script src="/admin/js/paper-dashboard.min.js?v=2.0.1" type="text/javascript"></script>
            <script src="/admin/demo/demo.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        </div>
    </div>

    <script>

        $(document).ready(function () {
            // Function to render users with block/unblock buttons
            function renderUsers(data) {
                $('.user-table tbody').empty();

                data.forEach((user, index) => {
                    const buttonHtml = user.isBlocked === false
                        ? `<button class="btn btn-danger btn-sm mng-btn action-btn" data-id="${user._id}" data-action="block">Block</button>`
                        : `<button class="btn btn-success btn-sm mng-btn action-btn" data-id="${user._id}" data-action="unblock">Unblock</button>`;

                    $('.user-table tbody').append(`
                <tr>
                    <td>${index + 1}</td> <!-- Serial number -->
                    <td>${user.username}</td>
                    <td>${user.email}</td>
                    <td>${user.phone}</td>
                    <td class="action-buttons">
                        ${buttonHtml} <!-- Dynamic button -->
                    </td>
                </tr>
            `);
                });

                // Attach event listeners to the dynamically generated buttons
                attachActionListeners();
            }

            // Function to attach event listeners to the block/unblock buttons
            function attachActionListeners() {
                $('.action-btn').on('click', function () {
                    const userId = $(this).data('id');
                    const action = $(this).data('action');

                    // Call the updateUserStatus API
                    $.ajax({
                        url: '/admin/updateUserStatus',
                        method: 'POST',
                        data: { userId: userId, action: action },
                        success: function (response) {
                            // alert(response.message);
                            $('#search-input').trigger('keyup'); // Re-trigger the search or reload users
                        },
                        error: function (err) {
                            console.error('Error updating user status:', err);
                        }
                    });
                });
            }

            function debounce(func, delay) {
                let timeout;
                return function (...args) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), delay);
                };
            }

            // Fetch users initially or based on search
            $('#search-input').on('keyup', debounce(function () {
                const query = $(this).val();

                if (query.length > 0) {
                    $.ajax({
                        url: '/admin/searchUsers',
                        method: 'GET',
                        data: { query: query },
                        success: function (data) {
                            renderUsers(data);
                        },
                        error: function (err) {
                            console.error("Error fetching users: ", err);
                        }
                    });
                } else {
                    $.ajax({
                        url: '/admin/userManagementShow',
                        method: 'GET',
                        success: function (data) {
                            renderUsers(data);
                        },
                        error: function (err) {
                            console.error("Error fetching users: ", err);
                        }
                    });
                }
            }, 300));

            // Initial load of users
            $.ajax({
                url: '/admin/userManagementShow',
                method: 'GET',
                success: function (data) {
                    renderUsers(data);
                },
                error: function (err) {
                    console.error("Error fetching initial users: ", err);
                }
            });
        });
    </script>
</body>

