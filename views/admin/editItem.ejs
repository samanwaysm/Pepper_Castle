    <style>
        .image-preview-container {
            position: relative;
            display: flex;
            align-items: flex-start;
            margin-top: 10px;
        }

        .image-preview {
            position: relative; /* To position the close button */
            margin-right: 20px; /* Space between image and other form elements */
        }

        .image-preview img {
            max-width: 200px; /* Adjust image size */
            border-radius: 10px;
        }

        .image-name {
            font-weight: bold;
            text-align: center; /* Center the image name */
            margin-bottom: 5px; /* Space between name and image */
        }

        .remove-btn {
            background-color: #ff0000; /* Red background */
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 14px;
            border-radius: 50%; /* Make it circular */
            position: absolute; /* Position it absolutely */
            top: 5px; /* Adjust as needed */
            right: 5px; /* Adjust as needed */
            display: none; /* Initially hidden */
        }

        .change-image-btn {
            margin-top: 10px; /* Space between image and button */
            display: block; /* Make the button a block element */
            width: 20%; /* Full width */
        }
        .error{
            color: #ff0000;
            margin-left: 5px;
        }
    </style>
</head>
<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="https://www.creative-tim.com" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="images/fav.png">
                    </div>
                </a>
                <a href="https://www.creative-tim.com" class="simple-text logo-normal">Pepper Castle</a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li><a href="/dashboard"><i class="nc-icon nc-bank"></i><p>Dashboard</p></a></li>
                    <li><a href="/orderManagement"><i class="nc-icon nc-bag-16"></i><p>Order Management</p></a></li>
                    <li><a href="/userManagement"><i class="nc-icon nc-single-02"></i><p>User Management</p></a></li>
                    <li><a href="/categoryManagement"><i class="nc-icon nc-minimal-down"></i><p>Category Management</p></a></li>
                    <li class="active"><a href="/itemManagement"><i class="nc-icon nc-tile-56"></i><p>Item Management</p></a></li>
                    <li class="active-pro"><a href="/admin/logout"><i class="nc-icon nc-simple-remove"></i><p>Logout</p></a></li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="javascript:;">Item Management</a>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-user">
                            <div class="card-header">
                                <h5 class="card-title">Add Item</h5>
                            </div>
                            <div class="card-body">
                                <form action="/admin/editItem?id=<%= item._id %>" method="POST" enctype="multipart/form-data" novalidate>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label>Item Name</label>
                                                <input type="text" class="form-control h-25" value="<%= item.item %>" placeholder="Enter Item Name" name="item"/>
                                                <% if (errors && errors.item) { %>
                                                    <span class="error"><%= errors.item %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="col-md-6 pl-1">
                                            <div class="form-group">
                                                <label>Category</label>
                                                <select class="form-control h-25" name="category">
                                                    <option value="<%= item.category %>"><%= item.category %></option>
                                                    <% for(let i = 0; i < category.length; i++) { %>
                                                        <option value="<%= category[i].category %>"><%= category[i].category %></option>
                                                    <% } %>
                                                </select>
                                                <% if (errors && errors.category) { %>
                                                    <span class="error"><%= errors.category %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 pr-1">
                                            <div class="form-group">
                                                <label>Price</label>
                                                <input type="number" class="form-control" value="<%= item.price %>" placeholder="Enter Price" name="price"/>
                                                <% if (errors && errors.price) { %>
                                                    <span class="error"><%= errors.price %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea class="form-control" placeholder="Enter Description" name="description"><%= item.description %></textarea>
                                                <% if (errors && errors.description) { %>
                                                    <span class="error"><%= errors.description %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="image" class="form-label">Image</label>
                                                <div class="image-preview-container">
                                                    <div class="image-preview">
                                                        <div class="image-name" id="imageName"></div>
                                                        <img id="imagePreview" src="<%= item.image %>" alt="Preview" />
                                                        <button type="button" id="deleteImageBtn" class="remove-btn">X</button>
                                                    </div>
                                                    <input class="form-control border border-dark" type="file" name="image" id="imageInput" style="display: none;">
                                                </div>
                                                <button type="button" id="changeImageBtn" class="btn btn-secondary change-image-btn">Change Image</button>
                                                <p class="err-msg d-flex justify-content-start" id="errorElement2" style="color: red; font-size: 13px;"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="update ml-auto mr-auto">
                                            <button type="submit" class="btn btn-primary btn-round">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <script src="/admin/js/core/jquery.min.js"></script>
                        <script src="/admin/js/core/popper.min.js"></script>
                        <script src="/admin/js/core/bootstrap.min.js"></script>
                        <script>
                            const imageInput = document.getElementById('imageInput');
                            const imagePreview = document.getElementById('imagePreview');
                            const deleteImageBtn = document.getElementById('deleteImageBtn');
                            const changeImageBtn = document.getElementById('changeImageBtn');
                            const imageNameDisplay = document.getElementById('imageName');

                            // Original image source for reverting
                            const originalImageSrc = imagePreview.src;

                            // Change image button functionality
                            changeImageBtn.addEventListener('click', function () {
                                imageInput.click();
                            });

                            // Handle file input change
                            imageInput.addEventListener('change', function (event) {
                                const file = event.target.files[0];
                                if (file) {
                                    const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                                    if (!validTypes.includes(file.type)) {
                                        errorElement2.textContent = 'Please upload a valid image (JPG, JPEG, or PNG).';
                                        imageInput.value = '';  // Reset the input
                                        imagePreviewContainer.classList.add('hidden');  // Hide the preview
                                        imageName.textContent = '';  // Clear the image name
                                    } else {
                                        const reader = new FileReader();
                                        reader.onload = function (e) {
                                            imagePreview.src = e.target.result;
                                            imagePreviewContainer.classList.remove('hidden');
                                            imageName.textContent = file.name; // Show the image name
                                            errorElement2.textContent = ''; // Clear error message
                                        };
                                        reader.readAsDataURL(file);
                                    }
                                    // const reader = new FileReader();
                                    // reader.onload = function (e) {
                                    //     imagePreview.src = e.target.result;
                                    //     imageNameDisplay.textContent = file.name; // Display the image name
                                    //     deleteImageBtn.style.display = 'block'; // Show the delete button
                                    // };
                                    // reader.readAsDataURL(file);
                                }
                            });

                            // Handle delete image button click
                            deleteImageBtn.addEventListener('click', function () {
                                imageInput.value = ''; // Clear the file input
                                imagePreview.src = originalImageSrc; // Revert to the original image
                                imageNameDisplay.textContent = ''; // Clear the image name
                                deleteImageBtn.style.display = 'none'; // Hide the delete button
                            });
                        </script>
                    </div>
                </div>
            </div>
