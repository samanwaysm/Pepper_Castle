    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Pepper Castle Admin - Order Management</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="/admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/admin/css/paper-dashboard.css?v=2.0.1" rel="stylesheet" />
    <!-- <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" /> -->
    <link href="/admin/css/bootstrap.min.css" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="/admin/demo/demo.css" rel="stylesheet" />
    <style>
        .order-status-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .status-select {
            border-radius: 5px;
            padding: 0.375rem 0.75rem;
            max-width: 125px;
        }

        .update-button {
            border-radius: 5px;
            padding: 0.375rem 0.75rem;
        }

        .order-management-container {
            margin-top: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        h4 {
            margin-bottom: 20px;
        }

        th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .nav {
            margin-top: 1rem;
            margin-bottom: 1rem
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="/adminlogin" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="images/fav.png" alt="Logo">
                    </div>
                </a>
                <a href="/adminlogin" class="simple-text logo-normal">Pepper Castle</a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href="/dashboard">
                            <i class="nc-icon nc-bank"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/orderManagement">
                            <i class="nc-icon nc-bag-16"></i>
                            <p>Order Management</p>
                        </a>
                    </li>
                    <li>
                        <a href="/userManagement">
                            <i class="nc-icon nc-single-02"></i>
                            <p>User Management</p>
                        </a>
                    </li>
                    <li>
                        <a href="/categoryManagement">
                            <i class="nc-icon nc-minimal-down"></i>
                            <p>Category Management</p>
                        </a>
                    </li>
                    <li>
                        <a href="/itemManagement">
                            <i class="nc-icon nc-tile-56"></i>
                            <p>Item Management</p>
                        </a>
                    </li>
                    <li>
                        <a href="/table-management">
                            <i class="nc-icon nc-email-85"></i>
                            <p>Table Management</p>
                        </a>
                    </li>

                    <li class="active-pro">
                        <a href="/admin/logout">
                            <i class="nc-icon nc-simple-remove"></i>
                            <p>Logout</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top"
                style="position: fixed;background-color: #fff;color:black">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="javascript:;">Order Management</a>
                    </div>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <form>
                            <div class="input-group no-border">
                                <input type="text" value="" name="search" class="form-control" placeholder="Search..."
                                    id="search-input">
                                <!-- <input type="text" name="search" placeholder="Search users..." id="search-input" /> -->
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="nc-icon nc-zoom-split"></i>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="breadcrumb">
                    <a href="/itemManagement" class="breadcrumb-link">Order Management</a>

                </div>
                <div class="container-fluid order-management-container">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Items (Name x Quantity)</th>
                                <th>Status</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                                <th>---</th>
                            </tr>
                        </thead>
                        <tbody id="order-table-body">
                            <% orders.reverse().forEach(order=> { %>
                                <tr>
                                    <td>
                                        <%= order.orderId %>
                                    </td>
                                    <td>
                                        <ul>
                                            <% order.items.forEach(item=> { %>
                                                <li>
                                                    <%= item.itemName %> x <%= item.quantity %>
                                                </li>
                                                <% }); %>
                                        </ul>
                                    </td>
                                    <td>
                                        <div class="order-status-container">
                                            <% if (order.status==='Delivered' ) { %>
                                                <button class="btn btn-success" disabled>Delivered</button>
                                                <% } else if (order.status==='Cancelled' ) { %>
                                                    <button class="btn btn-danger" disabled>Cancelled</button>
                                                    <% } else { %>
                                                        <select class="form-control status-select">
                                                            <option value="Ordered" <%=order.status==='Ordered'
                                                                ? 'selected' : '' %>>Ordered</option>
                                                            <option value="Processing" <%=order.status==='Processing'
                                                                ? 'selected' : '' %>>Processing</option>
                                                            <option value="Shipped" <%=order.status==='Shipped'
                                                                ? 'selected' : '' %>>Shipped</option>
                                                            <option value="Delivered" <%=order.status==='Delivered'
                                                                ? 'selected' : '' %>>Delivered</option>
                                                            <option value="Cancelled" <%=order.status==='Cancelled'
                                                                ? 'selected' : '' %>>Cancelled</option>
                                                        </select>
                                                        <button class="btn btn-success update-button">Update</button>
                                                        <% } %>
                                        </div>
                                    </td>
                                    <td>S$<%= order.totalAmount.toFixed(2) %>
                                    </td>
                                    <td>
                                        <a href="/orderDetail?orderId=<%= order.orderId %>"
                                            class="btn btn-info btn-sm">Order Details</a>
                                    </td>
                                    <td>---</td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                $(document).ready(function () {
                    // Search functionality
                    $('#search-input').on('keyup', function () {
                        const searchValue = $(this).val().trim();

                        $.ajax({
                            url: '/admin/searchOrders',  // New endpoint to handle search
                            method: 'GET',
                            data: { search: searchValue },
                            success: function (response) {
                                const orders = response.orders;
                                console.log(response.orders);

                                const tbody = $('#order-table-body');
                                tbody.empty(); // Clear the table

                                if (orders.length > 0) {
                                    orders.forEach(order => {
                                        let itemsHTML = '<ul>';
                                        order.items.forEach(item => {
                                            itemsHTML += `<li>${item.itemName} x ${item.quantity}</li>`;
                                        });
                                        itemsHTML += '</ul>';

                                        let statusHTML = '';
                                        if (order.status === 'Delivered') {
                                            statusHTML = '<button class="btn btn-success" disabled>Delivered</button>';
                                        } else if (order.status === 'Cancelled') {
                                            statusHTML = '<button class="btn btn-danger" disabled>Cancelled</button>';
                                        } else {
                                            statusHTML = `
                                                <select class="form-control status-select">
                                                    <option value="Ordered" ${order.status === 'Ordered' ? 'selected' : ''}>Ordered</option>
                                                    <option value="Processing" ${order.status === 'Processing' ? 'selected' : ''}>Processing</option>
                                                    <option value="Shipped" ${order.status === 'Shipped' ? 'selected' : ''}>Shipped</option>
                                                    <option value="Delivered" ${order.status === 'Delivered' ? 'selected' : ''}>Delivered</option>
                                                    <option value="Cancelled" ${order.status === 'Cancelled' ? 'selected' : ''}>Cancelled</option>
                                                </select>
                                                <button class="btn btn-success update-button">Update</button>
                                            `;
                                        }

                                        tbody.append(`
                                            <tr>
                                                <td>${order.orderId}</td>
                                                <td>${itemsHTML}</td>
                                                <td>
                                                    <div class="order-status-container">${statusHTML}</div>
                                                </td>
                                                <td>S$${order.totalAmount.toFixed(2)}</td>
                                                <td><a href="/orderDetail?orderId=${order.orderId}" class="btn btn-info btn-sm">Order Details</a></td>
                                                <td>---</td>
                                            </tr>
                                        `);
                                    });
                                } else {
                                    tbody.append('<tr><td colspan="6">No orders found</td></tr>');
                                }
                            },
                            error: function (err) {
                                console.error('Error fetching search results', err);
                            }
                        });
                    });
                });
                $(document).on('click', '.update-button', function () {
                    const row = $(this).closest('tr');
                    const orderId = row.find('td:first').text().trim(); // Get order ID from the first column
                    const status = row.find('.status-select').val(); // Get the selected status

                    $.ajax({
                        url: '/admin/updateStatus',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ orderId: orderId, status: status }),
                        success: function (response) {
                            alert(response.message);
                            location.reload();
                        },
                        error: function (err) {
                            alert('Error updating order status');
                        }
                    });
                });
            </script>


        </div>
