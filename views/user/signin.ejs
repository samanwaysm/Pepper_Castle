<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="icon" href="/images/fav.png" sizes="32x32" />
    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: url('/images/home/parallax-3.jpg') no-repeat center center fixed;
            background-size: cover;
        }
        .login-container {
            background-color: rgba(51, 51, 51, 0.8);
            padding: 40px;
            border-radius: 10px;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            text-align: center;
        }
        .logo {
            width: 80px;
            height: auto;
            margin-bottom: 10px;
        }
        .brand-name {
            font-size: 24px;
            color: #fff;
            font-weight: bold;
            margin-bottom: 20px;
        }
        h3 {
            text-align: center;
            color: #ff6600;
            margin-bottom: 30px;
        }
        label {
            font-size: 16px;
            color: #ffffff;
        }
        input[type="text"], input[type="password"] {
            background-color: #555555;
            color: #ffffff;
        }
        .login-btn {
            background-color: #ff6600;
        }
        .login-btn:hover {
            background-color: #e65c00;
        }
        .forgot-password a, .signup-link a {
            color: #ff6600;
        }
        .forgot-password a:hover, .signup-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Logo Section -->
        <img src="/images/fav.png" alt="Pepper Castle Logo" class="logo">
        <div class="brand-name">Pepper Castle</div>

        <h3>Login</h3>
        <% if (errors && errors.signInError) { %>
            <div class="alert alert-danger" role="alert">
                <p class="error-message"><%= errors.signInError %></p>
            </div>
        <% } %>
        <form id="loginForm" method="POST" action="/api/signin">
            <div class="form-group">
                <label for="email">Email / Phone:</label>
                <input type="text" class="form-control" id="emailOrPhone" name="emailOrPhone" placeholder="Enter your email or phone">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn login-btn btn-block">Login</button>
            <div class="forgot-password mt-3">
                <a href="/forgot-password">Forgot Password?</a>
            </div>
            <div class="signup-link mt-3">
                <a href="/signup">Sign Up</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function validateForm() {
            const emailOrPhone = document.getElementById('emailOrPhone').value;
            const password = document.getElementById('password').value;

            if (!emailOrPhone || !password) {
                alert('Both email/phone and password are required!');
                return false;
            }

            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (emailPattern.test(emailOrPhone) && !emailPattern.test(emailOrPhone)) {
                alert('Please enter a valid email address.');
                return false;
            }

            return true;
        }
    </script>
</body>
</html>
