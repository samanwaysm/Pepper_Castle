  <script>
    $(document).ready(function () {
      updateCartCount();
    });

    function updateCartCount() {
      const userId = `<%= userId %>`;  // Make sure userId is defined here
      if (!userId) {
        console.error("userId is not defined!");
        return;
      }

      $.ajax({
        url: '/api/itemCount',
        method: 'GET',
        data: { userId: userId },
        success: function (response) {
          console.log("Cart Count Response:", response);
          cartCountDisplay(response.cartItemCount);  // Pass the cart item count directly
        },
        error: function () {
          console.error("Error fetching cart count");
        }
      });
    }

    function cartCountDisplay(cartItemCount) {
      const cartIcon = document.getElementById('cartIcon');

      // Remove any existing counter to avoid duplication
      const existingCounter = cartIcon.querySelector('span');
      if (existingCounter) {
        cartIcon.removeChild(existingCounter);
      }

      // Create a new span element for the cart count
      const counter = document.createElement('span');
      counter.classList.add('cart-counter'); // Apply the CSS class for styling
      counter.textContent = cartItemCount;  // Use the count returned from the server

      // Append the counter to the cart icon
      cartIcon.appendChild(counter);
    }

    document.addEventListener('DOMContentLoaded', () => {
      const checkContainer = document.querySelector('.check-container');
      const successMessage = document.querySelector('.success-message');

      // Listen for the animation completion
      setTimeout(() => {
        // Display the success message after the animation
        successMessage.style.opacity = '1';
      }, 2000); // Adjust the timing based on your animation duration

      // Function to redirect to Orders List page
      window.redirectToOrders = function () {
        window.location.href = '/orders-list'; // Adjust URL as necessary
      }

      // Function to redirect to Home page
      window.redirectToHome = function () {
        window.location.href = '/'; // Adjust URL as necessary
      }
    });


  </script>

