        //         alert('Please enter a valid email address.');
        //         return false;
        //     }

        //     return true;
        // }
        const time = document.querySelector(".seconds");
    const resendButton = document.querySelector(".resendbtn");

    // Setting initial countdown time
    let countdownTime = Number(time.innerHTML);  // Initial time from server-side (default 60 seconds)
    
    const countdown = setInterval(() => {
        if (countdownTime > 0) {
            countdownTime -= 1;
            time.innerHTML = countdownTime;
        } else {
            clearInterval(countdown);
            showResendButton();
        }
    }, 1000);

    // Function to show resend button when time is up
    function showResendButton() {
        resendButton.removeAttribute("hidden");
        resendButton.disabled = false;  // Enable resend button
    }

    // Optionally, reset timer when the button is clicked (resend OTP)
    resendButton.addEventListener("click", () => {
        countdownTime = 60;  // Reset the countdown time to 60 seconds
        time.innerHTML = countdownTime;
        resendButton.disabled = true;  // Disable the button until countdown ends
        // Optionally make an API call to resend OTP
    });
    </script>

</body>
</html>
